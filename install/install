#!/bin/bash
# adcionando repositorios
# echo ""

read -p "Deseja adicionar os repositorios padrões? [s/n]" -n 1 -r

case "$REPLY" in 
	s|S )
	# clear
	echo ""
	echo "adicionando repositorios ..."

	sudo add-apt-repository ppa:nilarimogard/webupd8 -y
	sudo add-apt-repository ppa:mc3man/mpv-tests -y
	sudo add-apt-repository ppa:rvm/smplayer -y
	sudo add-apt-repository ppa:team-xbmc/ppa -y

	;;
esac



echo " "

read -p "Deseja Atualizar lista de pacotes? [s/n]" -n 1 -r

case "$REPLY" in  
    s|S )
	echo ""
	echo "Atualizando lista de pacotes ..."
		sudo apt-get update
        # ...
        # ...
    ;;


    # *)

    # ;;
esac

echo " "

read -p "Deseja instalar os apps padrões? [s/n]" -n 1 -r

case "$REPLY" in

	s|S )
		echo ""
		echo "Instalando app padrões ...."	
		sudo apt-get install apache2-utils php-mysql gparted gpart wireshark banshee pgadmin3 mysql-workbench python-tk libapache2-mod-php kodi kodi-au* kodi-scr* kodi-vi* software-properties-common android-tools-* cairo-dock mpv woeusb smplayer smplayer-themes smplayer-skins gcc gpp g++ cmake git lamp-server^ megatools dropbox sublime-text inkscape sqlite3 postgresql texlive-font-utils texlive-lang-spanish texlive-context texlive-latex-base texlive-lang-european texlive-publishers texlive-luatex texlive-lang-greek texlive-games texlive-lang-english texlive-lang-german texlive-generic-extra texlive-base texlive-lang-indic texlive-fonts-extra texlive-generic-recommended texlive texlive-metapost texlive-pictures texlive-lang-african texlive-lang-french texlive-fonts-recommended texlive-lang-cyrillic texlive-xetex texlive-latex-extra texlive-base-recommended texlive-lang-portuguese texlive-omega texlive-common texlive-music texlive-bibtex-extra texlive-lang-other texlive-lang-korean texlive-full texlive-plain-extra texlive-humanities texlive-lang-italian texlive-pstricks texlive-lang-czechslovak texlive-lang-arabic texlive-math-extra texlive-latex3 texlive-htmlxml texlive-formats-extra texlive-binaries texlive-lang-all texlive-base-bin texlive-lang-japanese texlive-lang-cjk texlive-science texlive-texinfo texlive-lang-chinese texlive-latex-recommended texlive-lang-arab texlive-extra-utils texlive-lang-polish texlive-binaries texlive-latex-recommended context libmatroska* libebml* gstreamer1.0-* -y
	;; 
esac

echo "fim!";
